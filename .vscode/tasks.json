{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        },{
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "-G",
                "\"Unix Makefiles\"",
                "-DCMAKE_BUILD_TYPE=Debug",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "dependsOn": [
                "cmake"
            ]
        }
    ],
    "version": "2.0.0"
}